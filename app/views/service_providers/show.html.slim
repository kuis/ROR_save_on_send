section.provider-header
  .container
    .row
      .col-xs-12.col-sm-10.col-sm-offset-1
        .provider-logo
          = image_tag('provider-icons/' + @provider.name.parameterize.downcase + '_b.png')

        .user-rating
          span.star-rating-control
            .star-rating.rater-0.star.star-rating-applied.star-rating-readonly.star-rating-on aria-label='' role='text'
              a title="on" on
            .star-rating.rater-0.star.star-rating-applied.star-rating-readonly.star-rating-on aria-label='' role='text'
              a title="on" on
            .star-rating.rater-0.star.star-rating-applied.star-rating-readonly.star-rating-on aria-label='' role='text'
              a title="on" on
            .star-rating.rater-0.star.star-rating-applied.star-rating-readonly.star-rating-on aria-label='' role='text'
              a title="on" on
            .star-rating.rater-0.star.star-rating-applied.star-rating-readonly.star-rating-off aria-label='' role='text'
              a title="off" off

        .provider-link
          = link_to(@provider.landing_page, target: 'new', class: 'btn btn-primary btn-lg') do
            i.fa.fa-fw.fa-check-circle-o
            = t('.go_to_provider')

section.content
  .container
    .row
      - if @provider.display_feedbacks.present?
        h4
          .col-xs-6.col-sm-5.col-sm-offset-1.text-left
            = t('.provider_feedbacks_title')
  
          .col-xs-6.col-sm-5.text-right
            small= t('.provider_feedbacks_count')

        .col-xs-12.col-sm-10.col-sm-offset-1
          = render @provider.display_feedbacks