- if flash[:notice].nil?
  section.splash
    .container
      .row
        .col-xs-12
          .flags
            ul
              li= image_tag "flags/70/India.png", { alt: '', title: '', class: 'img-responsive' }
              li= image_tag "flags/70/Mexico.png", { alt: '', title: '', class: 'img-responsive' }
              li= image_tag "flags/70/Philippines.png", { alt: '', title: '', class: 'img-responsive' }
              li= image_tag "flags/70/China.png", { alt: '', title: '', class: 'img-responsive' }

          h1.align-center= t('.benefits_title')
          .row
            .col-xs-12.col-sm-6.align-center.text-left
              ul
                - t('.benefits').each do |line, text|
                  li 
                    i.fa.fa-check 
                    | #{text}
          .buttons
            ul
              li= link_to t('.recent_transaction'), new_user_recent_transaction_path, class: %w{btn btn-lg btn-primary}
              li= link_to t('.next_transfer'), '#new_user_next_transfer', class: %w{btn btn-lg btn-orange} 
              li= link_to t('.registration'), new_user_registration_path, class: %w{btn btn-lg btn-turquoise}

- else
  section.content-header
    .container
      .row
        .col-xs-12
          h2= flash[:notice].html_safe

section.content.next-tr-page
  .container
    .row
      .col-xs-12
        h2= t('.form_title') 

    = render 'form'

= render partial: 'shared/feedback'
