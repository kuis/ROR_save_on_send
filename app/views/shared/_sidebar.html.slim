- if current_user
  li.active= link_to t('.hi') + current_user.first_name, edit_user_path
  li= link_to t('.how_to'), how_to_path
  li= link_to t('.next_transfer'), new_user_next_transfers_path(anchor: 'new_user_next_transfer')
  li= link_to t('.recent_transaction'), new_user_recent_transaction_path
  / li= link_to t('.help_others'), "#", "data-toggle" => "modal", "data-target" => "#referral_dialog"
  li= link_to t('.sign_out'), destroy_user_session_path, method: :delete

- else
  li.active= link_to t('.sign_up'), new_user_registration_path
  li= link_to t('.how_to'), how_to_path
  li= link_to t('.next_transfer'), new_user_next_transfers_path(anchor: 'new_user_next_transfer')
  li= link_to t('.recent_transaction'), new_user_recent_transaction_path
  li= link_to t('.sign_in'), new_user_session_path