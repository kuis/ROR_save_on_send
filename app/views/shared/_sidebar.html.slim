  li.promo= link_to_with_active t('.sign_up'), new_user_registration_path
  li= link_to_with_active t('.how_to'), how_to_path
  li= link_to_with_active t('.next_transfer'), new_user_next_transfers_path(anchor: 'new_user_next_transfer')
  li= link_to_with_active t('.recent_transaction'), new_user_recent_transaction_path
