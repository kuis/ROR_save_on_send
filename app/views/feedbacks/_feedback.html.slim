.container
  .raw
    .col-sm-4
      div
        - if feedback.user.present?
          - if feedback.user.level.present?
            = feedback.user.level.name
          em= feedback.user.full_name
          - if feedback.user.points > 0
            = "#{feedback.user.points} #{t('.points')}"
        - else
          em= t('.anonymous')
      div= l(feedback.created_at.to_date, format: :long)

    .col-sm-4.text-center
      .user-rating= display_service_quality_for_feedback(feedback)

    .col-sm-4
      = feedback.comments
