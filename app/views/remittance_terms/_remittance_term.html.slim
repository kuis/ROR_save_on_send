tr *{class: remittance_term.highlighted? ? [:success] : []}
  td= link_to(remittance_term.service_provider.name, service_provider_path(remittance_term.service_provider))
  - if @from_to_show
    td
      - if remittance_term.highlighted?
        =link_to '#apply_payment_methods' do
          | #{remittance_term.send_method.slug}
            - #{remittance_term.receive_method.slug}
        .hidden.send_method_id= remittance_term.send_method.id
        .hidden.receive_method_id= remittance_term.receive_method.id
      - else
        | #{remittance_term.send_method.slug}
          - #{remittance_term.receive_method.slug}
  - if @user_next_transfer.amount_send > 0
    td= humanized_money_with_symbol(remittance_term.send_amount_with_fee(@user_next_transfer.amount_send))
  - else
    td= humanized_money_with_symbol(remittance_term.estimated_send_amount(@user_next_transfer.amount_receive, @user_next_transfer.receive_currency))
  - if @user_next_transfer.amount_send > 0
    td= number_to_percentage(remittance_term.all_fees(@user_next_transfer.amount_send), precision: 2)
  - else
    td= number_to_percentage(remittance_term.all_fees(@user_next_transfer.amount_receive.exchange_to('USD')), precision: 2)
  - if @user_next_transfer.amount_send > 0
    td
      | #{@user_next_transfer.receive_currency}&nbsp;
        #{money_without_cents(remittance_term.estimated_receive_amount(@user_next_transfer.amount_send, @user_next_transfer.receive_currency))}
  - else
    td
      | #{@user_next_transfer.receive_currency}&nbsp;
        #{money_without_cents(@user_next_transfer.amount_receive)}
  td= remittance_term.duration
  //td= remittance_term.documentation
  //td= remittance_term.promotions
  td= remittance_term.service_quality
